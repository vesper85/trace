{
    "name": "sim-backend",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run src/index.ts",
        "test": "bun test",
        "test:simulate": "bun run scripts/test-simulate.ts",
        "check-types": "tsc --noEmit",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bunx drizzle-kit migrate",
        "db:push": "bunx drizzle-kit push",
        "db:studio": "bunx drizzle-kit studio"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.2.0",
        "@elysiajs/node": "^1.4.2",
        "@pythnetwork/hermes-client": "^2.1.0",
        "@pythnetwork/pyth-aptos-js": "^1.5.0",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "elysia": "^1.2.12",
        "postgres": "^3.4.7"
    },
    "devDependencies": {
        "@types/node": "^22.15.3",
        "bun-types": "^1.3.5",
        "drizzle-kit": "^0.31.8",
        "tsx": "^4.19.0",
        "typescript": "5.9.2",
        "vitest": "^2.1.0"
    }
}